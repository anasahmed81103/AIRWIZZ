@{
    ViewData["Title"] = "Login";
    // Get the TempData messages
    var successMessage = TempData["SuccessMessage"];
    var errorMessage = TempData["ErrorMessage"];
}


<body class="about-page-body">

    <div style="padding-top:3%;"></div>

    @if (successMessage != null)
    {
        <div class="about-head2 about-header">
            <h1 style="color:aliceblue;">Congratulations!</h1>
            <p style="color:aliceblue;">@successMessage</p>
        </div>

        <div class="about-container">
        <!-- About Us Section -->
            <div class="about-section">

                <p style="color:aliceblue;">
                    Your booking was successfully completed! Please check your email for further details about your reservation.
                    We hope you enjoy your experience and look forward to serving you again in the future.
                </p>
               
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="about-head2 about-header">
            <h1 style="color:aliceblue;">We Apologise !</h1>
            <p style="color:aliceblue;">@errorMessage</p>
        </div>

        <div class="about-container">
            <!-- About Us Section -->
            <div class="about-section">

                <p style="color:aliceblue;">
                    Unfortunately, there was an issue processing your booking. Please try again later or contact our customer
                    support team for assistance. We are committed to resolving the issue as quickly as possible.
                </p>


            </div>
        </div>

    }
    



</body>


