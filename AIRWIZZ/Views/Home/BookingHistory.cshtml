@model AIRWIZZ.Models.BookingHistoryModel

@{
    ViewData["Title"] = "Booking History";
}

<div class="container" style="margin-top: 150px;">
    <!-- Adjust margin-top to prevent overlap -->
    <!-- Heading Section -->
    <h1 class="text-center mb-4" style="font-size: 4.5rem; font-weight: bold; font-family: 'Poppins', sans-serif; color: #2222e8;">
        Flight Booking History Details
    </h1>
</div>


<div class="d-flex flex-column justify-content-center align-items-center min-vh-100" style="background: rgb(49,20,214);
background: linear-gradient(90deg, rgba(49,20,214,1) 0%, rgba(105,22,239,1) 100%, rgba(89,48,178,1) 100%);">



    @if (Model.Bookings_history_list != null && Model.Bookings_history_list.Any())

    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>#</th>
                        <th>Booking ID</th>
                        <th>Booking Date</th>
                        <th>Total Amount</th>
                        <th>Currency</th>
                        <th>Flight Number</th>
                        <th>Airline</th>
                        <th>Passenger Name</th>
                        <th>Seat Class</th>
                        <th>Seat Number</th>
                        <th>Booking Status</th>
                        <th>Departure City</th>
                        <th>Arrival City</th>
                        <th>Departure  Date - Time</th>
                        <th>Arrival  Date - Time</th>

                       
                       

                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.Bookings_history_list)
                    {
                        <tr>
                            <td>@(Model.Bookings_history_list.IndexOf(booking)+1) </td>
                            <td>@booking.Bookid</td>
                            <td>@booking.Bookdate.ToString("yyyy-MM-dd")</td>
                            <td>@booking.total_amount</td>
                            <td>@booking.currency_type</td>
                            <td>@booking.FlightNumber</td>
                            <td>@booking.Airline</td>
                            <td>@booking.PassengerName</td>
                            <td>@booking.Seat_class_type</td>
                            <td>@booking.SeatNum</td>
                            <td>@booking.Booking_Status</td>
                            <td>@booking.DepartureLocation</td> <!-- Departure Location -->
                            <td>@booking.DestinationLocation</td> <!-- Destination Location -->
                            <td>@booking.DepartureDateTime.ToString("yyyy-MM-dd   HH:mm")</td> <!-- Departure Date/Time -->
                            <td>@booking.ArrivalDateTime.ToString("yyyy-MM-dd    HH:mm")</td> <!-- Arrival Date/Time -->
                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    else

    {
        <div class="alert alert-warning text-center">
            No booking history available.
        </div>
    }
</div>