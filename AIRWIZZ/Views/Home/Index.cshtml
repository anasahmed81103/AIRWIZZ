<script>
	function scrollToTarget() {
		const hash = "#fligh"; // Target ID
		const target = document.querySelector(hash);
		if (target) {
			// Smooth scroll to the target section
			window.scrollTo({
				top: target.offsetTop + 400, // Adjust offset as needed
				behavior: "smooth"
			});
		}
	}

	// Scroll on page load if hash is present
	document.addEventListener("DOMContentLoaded", () => {
		if (window.location.hash === "#fligh") {
			scrollToTarget();
		}
	});

	// Scroll when hash changes
	window.addEventListener("hashchange", () => {
		if (window.location.hash === "#fligh") {
			scrollToTarget();
		}
	});

	// Handle repeated clicks on the link
	document.querySelector("a[href='#fligh']").addEventListener("click", (event) => {
		event.preventDefault(); // Prevent default jump behavior
		scrollToTarget();
	});
</script>
