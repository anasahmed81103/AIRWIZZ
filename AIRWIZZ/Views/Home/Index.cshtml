						<div class="col-md-1 col-sm-1">
							
						</div>

						<!-- First Column (Travel Date + Arrival Location) -->
						<div class="col-md-4 col-sm-10">
							<div class="single-model-search">
								<h2>Select Travel Date</h2>
								<div class="model-select-icon">
									<input type="date" class="form-control" placeholder="Select Date" name="travel_date" value="@Model.travel_date" required>
								</div>
							</div>
							<div class="single-model-search">
								<h2>Arrival Location</h2>
								<div class="model-select-icon">
									<select class="form-control" name="arrival_location" required>
										<option value="">Select Location</option>
										@foreach (var city in Model.arrival_cities)
										{
											if(!existingCities.Contains(city))
											{
												existingCities.Add(city);
												<option value ="@city">@city</option>

											}
										}
									</select>
								</div>
							</div>
						</div>

